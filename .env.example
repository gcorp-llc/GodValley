
############################################
# Global
############################################

ENV=development
K8S_NAMESPACE=default

############################################
# Ingress / Domains (Local)
############################################

GCORP_DOMAIN=gcorp.local
JOURNA_DOMAIN=journa.local
CARDIANI_DOMAIN=cardiani.local
ZETEB_DOMAIN=zeteb.local

############################################
# Frontend (Next.js)
############################################

NEXT_PUBLIC_API_BASE_URL=http://localhost

############################################
# Backend (Rust / Actix)
############################################

RUST_LOG=info
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

############################################
# Redis (Per Site)
############################################

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

############################################
# ScyllaDB (Per Site)
############################################

SCYLLA_HOST=scylladb
SCYLLA_PORT=9042
SCYLLA_KEYSPACE=app_keyspace
SCYLLA_USERNAME=scylla
SCYLLA_PASSWORD=scylla

############################################
# Security
############################################

JWT_SECRET=CHANGE_ME
API_INTERNAL_TOKEN=CHANGE_ME_TOO

############################################
# Resource Limits (Kubernetes)
############################################

CPU_LIMIT=500m
MEMORY_LIMIT=512Mi
